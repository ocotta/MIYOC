<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

                                <ImageView
                                    android1:id="@+id/imageView4"
                                    android1:layout_width="110dp"
                                    android1:layout_height="110dp"
                                    android1:layout_centerHorizontal="true"
                                    android1:adjustViewBounds="true"
                                    android:layout_marginTop="180dp"
                                    android1:contentDescription="@drawable/news0002"
                                    android1:padding="0dp"
                                    android1:scaleType="fitXY"
                                    android1:src="@drawable/news0002" />

                                <ImageView
                                    android1:id="@+id/imageView3"
                                    android1:layout_width="110dp"
                                    android1:layout_height="110dp"
                                    android1:layout_alignParentRight="true"
                                    android:layout_marginTop="180dp"
                                    android1:contentDescription="@drawable/news0004"
                                    android1:padding="0dp"
                                    android1:scaleType="fitXY"
                                    android1:src="@drawable/news0004" />

                                <ImageView
                                    android1:id="@+id/imageView1"
                                    android1:layout_width="fill_parent"
                                    android1:layout_height="170dp"
                                    android1:layout_alignParentLeft="true"
                                    android1:layout_below="@+id/imageView2"
                                    android1:layout_marginTop="15dp"
                                    android1:adjustViewBounds="true"
                                    android1:contentDescription="@drawable/miyoconlineposter12"
                                    android1:maxHeight="@dimen/activity_vertical_margin"
                                    android1:maxWidth="@dimen/activity_horizontal_margin"
                                    android1:padding="0dp"
                                    android1:scaleType="fitXY"
                                    android1:src="@drawable/miyoconlineposter12" />

                                <ImageView
                                    android1:id="@+id/imageView2"
                                    android1:layout_width="110dp"
                                    android1:layout_height="110dp"
                                    android1:layout_alignParentLeft="true"
                                    android:layout_marginTop="180dp"
                                    android1:contentDescription="@drawable/news0005"
                                    android1:padding="0dp"
                                    android1:scaleType="fitXY"
                                    android1:src="@drawable/news0005" />

                                <ImageView
                                    android1:id="@+id/imageView5"
                                    android1:layout_width="fill_parent"
                                    android1:layout_height="150dp"
                                    android1:layout_alignParentLeft="true"
                                    android1:layout_alignParentTop="true"
                                    android1:adjustViewBounds="true"
        							android:layout_marginTop="20dp"
                                    android1:contentDescription="@drawable/miyoconlineposter12"
                                    android1:maxHeight="@dimen/activity_vertical_margin"
                                    android1:maxWidth="@dimen/activity_horizontal_margin"
                                    android1:padding="0dp"
                                    android1:scaleType="fitXY"
                                    android1:src="@drawable/news0001" />

</RelativeLayout>