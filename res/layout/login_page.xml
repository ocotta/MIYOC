<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

<ImageView
    android:id="@+id/imageView1"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="70dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:adjustViewBounds="true"
    android:contentDescription="@drawable/login_register"
    android:padding="0dp"
    android:scaleType="fitXY"
    android:src="@drawable/login_register" />

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignTop="@+id/imageView1"
    android:layout_marginTop="120dp"
    android:paddingLeft="20dp"
    android:text="@string/login_acc"
    android:textStyle="bold"
    android:scaleType="fitXY"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignTop="@+id/textView1"
    android:layout_marginTop="18dp"
    android:paddingLeft="20dp"
    android:scaleType="fitXY"
    android:text="Gain one point per day by just logging in!"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="200dp"
    android:paddingLeft="20dp"
    android:scaleType="fitXY"
    android:text="Username:"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<EditText
    android1:id="@+id/eLogin"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_alignParentLeft="true"
    android1:layout_below="@+id/textView3"
    android1:layout_marginLeft="20dp"
    android1:ems="15"
    android1:inputType="textEmailAddress"
    android1:hint="Enter your username here" >

    <requestFocus />
</EditText>

<TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="280dp"
    android:paddingLeft="20dp"
    android:scaleType="fitXY"
    android:text="Password:"
    android:textAppearance="?android:attr/textAppearanceMedium" />

<EditText
    android1:id="@+id/ePass"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_alignLeft="@+id/eLogin"
    android1:layout_below="@+id/textView4"
    android1:ems="12"
    android1:inputType="textPassword"
    android1:hint="Enter your password here" />

<Button
    android1:id="@+id/login_but"
    style="?android:attr/buttonStyleSmall"
    android1:layout_width="100dp"
    android1:layout_height="40dp"
    android1:layout_marginTop="370dp"
    android1:layout_alignLeft="@+id/ePass"
    android1:text="Login" />

<Button
    android1:id="@+id/register_but"
    style="?android:attr/buttonStyleSmall"
    android1:layout_width="100dp"
    android1:layout_height="40dp"
    android1:layout_alignBaseline="@+id/login_but"
    android1:layout_alignBottom="@+id/login_but"
    android1:layout_toRightOf="@+id/login_but"
    android1:text="Register" />

<Button
    android1:id="@+id/forgetpass"
    style="?android:attr/buttonStyleSmall"
    android1:background="@android:color/white"
    android1:layout_width="120dp"
    android1:layout_height="40dp"
    android1:layout_alignBaseline="@+id/register_but"
    android1:layout_alignBottom="@+id/register_but"
	android1:layout_toRightOf="@+id/register_but"
    android1:text="Forget Password" />

<TextView
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:id="@+id/loginErrorMsg"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/login_but"
            android:layout_alignParentLeft="true"/>

<CheckBox
    android1:id="@+id/CheckBox"
    android1:layout_width="wrap_content"
    android1:layout_height="wrap_content"
    android1:layout_above="@+id/register_but"
    android1:layout_alignLeft="@+id/login_but"
    android1:text="Save Email and Password" />

</RelativeLayout>
